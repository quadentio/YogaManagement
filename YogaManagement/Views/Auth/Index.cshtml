@{
    var loginAuthUrl = Url.Action("Index", "Auth");
    var registerAuthUrl = Url.Action("Register", "Auth");
    var privacyHomeUrl = Url.Action("Privacy", "Home");
}

@section RenderBodyStyles{
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@model User

<section class="vh-100 rounded-3 main-background">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card glass-container" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-flex align-items-center">
                            <img src="./img/yoga_login.png"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post" action="@loginAuthUrl">

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-3">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <input type="text" asp-for="UserName" class="form-control form-control-lg" placeholder="username" />
                                    </div>

                                    <div class="form-outline mb-3">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="password" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-warning btn-lg btn-block" type="submit">Login</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="@registerAuthUrl"
                                                                  style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="@privacyHomeUrl" class="small text-muted">Privacy policy</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>