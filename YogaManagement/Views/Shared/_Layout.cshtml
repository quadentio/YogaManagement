@{
    var action = ViewContext.ActionDescriptor.RouteValues["action"];
    var controller = ViewContext.ActionDescriptor.RouteValues["controller"];
    var indexHomeUrl = Url.Action("Index", "Home");
    var privacyHomeUrl = Url.Action("Privacy", "Home");
    var indexClassUrl = Url.Action("Index", "Class");
}﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YogaManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YogaManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("RenderBodyStyles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col d-flex flex-column justify-content-between col-auto min-vh-100 main-layout-background">
                <div>
                    <a href="@indexHomeUrl" class="text-white text-decoration-none d-flex align-items-center ms-4 mt-2" role="button">
                        <i class="bi bi-menu-up"></i>
                        <span class="fs-5 ms-2">Yoga</span>
                    </a>
                    <hr class="text-white">
                    <div class="flex-column justify-content-between">

                        @*MainMenuSection*@
                        <ul class="nav nav-pills flex-column mt-2 mt-sm-0" id="menu">
                            <li class="nav-item mb-2 hover-primary">
                                <a href="@indexHomeUrl" class="@(action == "Index" && controller == "Home" ? "active" : "") nav-link text-white">
                                    <i class="bi bi-house-fill"></i>
                                    <span class="ms-2">Home</span>
                                </a>
                            </li>
                            <li class="nav-item mb-2">
                                <a href="@privacyHomeUrl" class="@(action == "Privacy" && controller == "Home" ? "active" : "") nav-link text-white">
                                    <i class="bi bi-shield-check"></i>
                                    <span class="ms-2">Privacy</span>
                                </a>
                            </li>
                            <partial name="_LoginFuncPartial" />
                        </ul>

                        <hr class="text-white">

                        @*Login Section*@
                        <partial name="_LoginStatusPartial" />
                    </div>
                </div>

                <div>
                    <div class="dropdown open">
                        
                    </div>
                    <div class="text-center">
                        <footer class="h5 border-top text-white mx-auto">
                            &copy; 2023 - <a class="text-white" asp-area="" asp-page="/Privacy">huycq</a>
                        </footer>
                    </div>
                    
                </div>
            </div>

            @* Main Content go here *@
            <div class="col container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Logout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
